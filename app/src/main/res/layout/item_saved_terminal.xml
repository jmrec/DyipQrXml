<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="?attr/colorSurface"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Terminal Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Terminal Name -->
            <TextView
                android:id="@+id/textTerminalName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Terminal Name"
                android:textColor="?attr/colorOnSurface"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <!-- Terminal Description -->
            <TextView
                android:id="@+id/textTerminalDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Terminal description goes here"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <!-- Location Info -->
            <TextView
                android:id="@+id/textLocationInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“ Location available"
                android:textColor="?attr/colorPrimary"
                android:textSize="12sp"
                android:drawablePadding="4dp" />

        </LinearLayout>

        <!-- Remove Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonRemove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove"
            android:textSize="12sp"
            app:backgroundTint="?attr/colorError"
            app:cornerRadius="8dp"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>