<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <!-- Google Map -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- TOP STACK (Empty now since search is in toolbar) -->
    <LinearLayout
        android:id="@+id/topStack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="vertical"
        android:padding="8dp"
        android:gravity="top"
        android:visibility="gone">

        <!-- Search functionality moved to toolbar -->

    </LinearLayout>

    <!-- Route Info Card - Compact and Icon-based -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardRouteInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|start"
        android:layout_margin="16dp"
        android:visibility="gone"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="?attr/colorSurface"
        android:layout_marginTop="30dp"
        android:alpha="0.9">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Route Header with Name and Favorite -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/textRouteName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Route Name"
                    android:textColor="?attr/colorOnSurface"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/buttonFavoriteRoute"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:contentDescription="Save route"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="2dp"
                    android:src="@drawable/ic_bookmark_add"
                    android:tint="?attr/colorPrimary" />

            </LinearLayout>

            <!-- Route Details with Icons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <!-- Fare -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_cash"
                        android:layout_marginEnd="4dp"
                        app:tint="?attr/colorPrimary" />

                    <TextView
                        android:id="@+id/textRouteFare"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚±13.00"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="12sp" />

                </LinearLayout>

                <!-- Route Length and Time -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_route"
                        android:tint="?attr/colorPrimary"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/textRouteLength"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5.2 km / 15 min"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Distance to Terminal -->
            <LinearLayout
                android:id="@+id/layoutDistanceToTerminal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_directions_bus"
                    android:tint="?attr/colorPrimary"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/textDistanceToTerminal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Walk 250m to terminal"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- FAB STACK (BOTTOM RIGHT) -->
    <LinearLayout
        android:id="@+id/fabStack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:orientation="vertical"
        android:gravity="end"
        android:layout_margin="16dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabAddRoute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_route"
            app:tint="@android:color/white"
            app:backgroundTint="?attr/colorPrimary"
            android:layout_marginBottom="12dp" />

<!--        <com.google.android.material.floatingactionbutton.FloatingActionButton-->
<!--            android:id="@+id/fabCurrentLocation"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:src="@drawable/ic_directions_bus"-->
<!--            app:tint="@android:color/white"-->
<!--            app:backgroundTint="?attr/colorPrimary" />-->

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabFavoritesToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star"
            app:tint="@android:color/white"
            app:backgroundTint="?attr/colorSecondary"
            android:layout_marginBottom="12dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabNearestRoutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_directions_bus"
            app:tint="@android:color/white"
            app:backgroundTint="?attr/colorSecondary" />

    </LinearLayout>

    <!-- NEAREST ROUTES PANEL (TOP LEFT) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardNearestRoutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_margin="16dp"
        android:visibility="gone"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="?attr/colorSurface"
        android:alpha="0.85">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“ Nearest Routes"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface" />

            <TextView
                android:id="@+id/textNearestRoutes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Finding routes near you..."
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>